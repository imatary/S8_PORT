<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="2.0dip" android:color="#ff008cff" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/ripple_material_dark" />
            <corners android:topLeftRadius="@dimen/radius_for_submenu_corners" android:topRightRadius="@dimen/radius_for_submenu_corners" android:bottomLeftRadius="@dimen/radius_for_submenu_corners" android:bottomRightRadius="@dimen/radius_for_submenu_corners" />
        </shape>
    </item>
</selector>