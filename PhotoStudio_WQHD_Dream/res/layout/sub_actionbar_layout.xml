<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:background="@color/sub_actionbar_bg_color" android:layout_width="fill_parent" android:layout_height="@dimen/sub_actionbar_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <LinearLayout android:id="@id/action_bar_cancel_bg" android:layout_width="wrap_content" android:layout_height="fill_parent">
            <FrameLayout android:id="@id/action_bar_cancel" android:background="@drawable/actionbar_ripple_background" android:focusable="true" android:layout_width="wrap_content" android:layout_height="fill_parent">
                <ImageView android:layout_gravity="center_vertical" android:id="@id/image" android:layout_width="@dimen/sub_actionbar_icon_height" android:layout_height="@dimen/sub_actionbar_icon_height" android:layout_marginLeft="@dimen/text_sub_actionbar_margin_left" android:layout_marginRight="@dimen/text_sub_actionbar_margin_right" android:src="@drawable/ic_cancel" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="end|center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1.0">
        <LinearLayout android:id="@id/action_bar_done_bg" android:layout_width="wrap_content" android:layout_height="fill_parent">
            <FrameLayout android:id="@id/action_bar_done" android:background="@drawable/actionbar_ripple_background" android:focusable="true" android:layout_width="wrap_content" android:layout_height="fill_parent">
                <ImageView android:layout_gravity="center_vertical" android:id="@id/image" android:layout_width="@dimen/sub_actionbar_icon_height" android:layout_height="@dimen/sub_actionbar_icon_height" android:layout_marginLeft="@dimen/text_sub_actionbar_margin_right" android:layout_marginRight="@dimen/text_sub_actionbar_margin_left" android:src="@drawable/ic_apply" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>