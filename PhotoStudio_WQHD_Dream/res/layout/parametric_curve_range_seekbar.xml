        <ImageView android:id="@id/handler_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/parametric_range_seekbar_mid_icon" />
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="start" android:orientation="vertical" android:id="@id/parametric_curve_high_handler" android:background="@android:color/transparent" android:focusable="true" android:layout_width="@dimen/curve_range_seekbar_handler_width" android:layout_height="fill_parent">
        <ImageView android:id="@id/handler_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/parametric_range_seekbar_high_icon" />
    </LinearLayout>
</FrameLayout>