                        <View android:focusable="true" android:layout_width="@dimen/text_allignment_width" android:layout_height="@dimen/text_font_type_height" />
                    </RelativeLayout>
                    <ImageButton android:background="#00ffffff" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="@dimen/text_allignment_width" android:layout_height="fill_parent" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <ImageView android:id="@id/spen_setting_text_line" android:background="#ffe0e0e0" android:layout_width="fill_parent" android:layout_height="@dimen/text_top_line_height" android:layout_alignParentTop="true" />
</RelativeLayout>