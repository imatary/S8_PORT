                        <ImageView android:layout_width="@dimen/text_font_type_spinner_width" android:layout_height="@dimen/text_font_type_height" android:layout_toRightOf="@id/text_font_type_name" />
                        <View android:focusable="true" android:layout_width="@dimen/text_font_type_parent_width" android:layout_height="@dimen/text_font_type_height" />
