                <RelativeLayout android:id="@id/text_align_button" android:layout_width="wrap_content" android:layout_height="@dimen/text_common_button_height">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
