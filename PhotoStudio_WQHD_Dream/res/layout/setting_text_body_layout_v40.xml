                        <View android:focusable="true" android:layout_width="@dimen/text_font_size_parent_width" android:layout_height="@dimen/text_font_type_height" />
                    </RelativeLayout>
                    <ImageView android:background="#00ffffff" android:focusableInTouchMode="false" android:clickable="false" android:layout_width="@dimen/text_font_size_parent_width" android:layout_height="fill_parent" />
