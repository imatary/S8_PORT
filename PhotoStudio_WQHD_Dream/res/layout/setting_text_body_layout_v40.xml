            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="@dimen/text_common_button_width" android:layout_height="fill_parent" android:layout_marginRight="@dimen/text_bullet_margin_right" android:layout_weight="1.0">
                <RelativeLayout android:id="@id/text_bullet" android:background="#00000000" android:layout_width="@dimen/text_common_button_width" android:layout_height="@dimen/text_common_button_height">
                    <ImageButton android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="center" android:layout_centerInParent="true" />
