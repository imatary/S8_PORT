                        <ImageView android:background="@android:color/black" android:layout_width="@dimen/text_color_preview_width" android:layout_height="@dimen/text_color_preview_height" android:layout_marginBottom="@dimen/text_color_preview_margin_bottom" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
