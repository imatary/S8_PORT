                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="@dimen/text_common_button_width" android:layout_height="fill_parent" android:layout_weight="1.0" android:layout_marginEnd="@dimen/text_setting_common_button_margin_right">
                <RelativeLayout android:id="@id/spen_setting_text_italic" android:background="#00000000" android:layout_width="@dimen/text_common_button_width" android:layout_height="@dimen/text_common_button_height">
                    <ImageButton android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="center" android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:gravity="center" android:layout_width="@dimen/text_common_button_width" android:layout_height="fill_parent" android:layout_weight="1.0" android:layout_marginEnd="@dimen/text_setting_common_button_margin_right">
                <RelativeLayout android:id="@id/spen_setting_text_underline" android:background="#00000000" android:layout_width="@dimen/text_common_button_width" android:layout_height="@dimen/text_common_button_height">
                    <ImageButton android:focusable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="center" android:layout_centerInParent="true" />
