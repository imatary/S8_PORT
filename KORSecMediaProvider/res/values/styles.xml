<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PickerDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog.Alert">
        <item name="android:colorAccent">@android:color/material_deep_teal_500</item>
    </style>
    <style name="CommonTheme" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:statusBarColor">@color/common_statusbar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="ThemeSPlanner" parent="@style/CommonTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:actionBarStyle">@android:style/Widget.DeviceDefault.Light.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/splanner_home_as_up_indicator</item>
        <item name="android:colorControlActivated">@color/splanner_primary</item>
        <item name="android:colorPrimary">@color/splanner_primary</item>
    </style>
    <style name="SPlannerActionBarStyle" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@color/splanner_actionbar_bg</item>
        <item name="android:titleTextStyle">@style/SPlannerTitleStyle</item>
    </style>
    <style name="SPlannerTitleStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/splanner_text</item>
    </style>
    <style name="ThemeSPlannerDialog" parent="@style/PickerDialogTheme">
        <item name="android:colorControlActivated">@color/splanner_primary</item>
        <item name="android:colorPrimary">@color/splanner_primary</item>
        <item name="android:colorPrimaryDark">@color/splanner_primary_dark</item>
    </style>
    <style name="ThemeEmailSetting" parent="@style/CommonTheme">
        <item name="android:actionBarStyle">@style/EmailSettingActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/email_home_as_up_indicator</item>
        <item name="android:colorControlActivated">@color/email_edge_effect</item>
        <item name="android:colorPrimary">@color/email_primary</item>
        <item name="android:colorPrimaryDark">@color/email_primary_dark</item>
        <item name="android:statusBarColor">@color/email_statusbar</item>
        <item name="android:colorEdgeEffect">@color/email_edge_effect</item>
    </style>
    <style name="EmailSettingActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:titleTextStyle">@style/EmailSettingActionBarTitle</item>
    </style>
    <style name="EmailSettingActionBarTitle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/email_text</item>
    </style>
    <style name="ThemeEmailSettingDialog" parent="@style/PickerDialogTheme">
        <item name="android:colorControlActivated">@color/email_primary</item>
        <item name="android:colorPrimary">@color/email_primary</item>
        <item name="android:colorPrimaryDark">@color/email_primary_dark</item>
    </style>
    <style name="ThemeCallSetting" parent="@style/CommonTheme">
        <item name="android:actionBarStyle">@android:style/Widget.DeviceDefault.Light.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/call_home_as_up_indicator</item>
        <item name="android:colorControlActivated">@color/call_primary</item>
        <item name="android:colorPrimary">@color/call_primary</item>
        <item name="android:colorPrimaryDark">@color/call_primary_dark</item>
        <item name="android:statusBarColor">@color/call_statusbar</item>
        <item name="android:colorEdgeEffect">@color/call_edge_effect</item>
    </style>
    <style name="CallSettingActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:titleTextStyle">@style/CallSettingActionBarTitle</item>
    </style>
    <style name="CallSettingActionBarTitle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/call_text</item>
    </style>
    <style name="ThemeCallSettingDialog" parent="@style/PickerDialogTheme">
        <item name="android:colorControlActivated">@color/call_primary</item>
        <item name="android:colorPrimary">@color/call_primary</item>
        <item name="android:colorPrimaryDark">@color/call_primary_dark</item>
    </style>
    <style name="ThemeMessage" parent="@style/CommonTheme">
        <item name="android:actionBarStyle">@android:style/Widget.DeviceDefault.Light.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/msg_home_as_up_indicator</item>
        <item name="android:colorControlActivated">@color/message_primary</item>
        <item name="android:colorPrimary">@color/message_primary</item>
        <item name="android:colorPrimaryDark">@color/message_primary_dark</item>
        <item name="android:statusBarColor">@color/message_statusbar</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="MessageActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@color/message_actionbar_bg</item>
        <item name="android:titleTextStyle">@style/MessageActionBarTitle</item>
    </style>
    <style name="MessageActionBarTitle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/message_text</item>
    </style>
    <style name="ThemeMessageDialog" parent="@style/PickerDialogTheme">
        <item name="android:colorControlActivated">@color/message_primary</item>
        <item name="android:colorPrimary">@color/message_primary</item>
        <item name="android:colorPrimaryDark">@color/message_primary_dark</item>
    </style>
    <style name="ThemeContacts" parent="@style/CommonTheme">
        <item name="android:homeAsUpIndicator">@drawable/contacts_home_as_up_indicator</item>
        <item name="android:colorControlActivated">@color/contact_primary</item>
        <item name="android:colorPrimary">@color/contact_primary</item>
        <item name="android:colorPrimaryDark">@color/contact_primary_dark</item>
        <item name="android:statusBarColor">@color/contact_statusbar</item>
    </style>
    <style name="ThemeContactsDialog" parent="@style/PickerDialogTheme">
        <item name="android:colorControlActivated">@color/contact_primary</item>
        <item name="android:colorPrimary">@color/contact_primary</item>
        <item name="android:colorPrimaryDark">@color/contact_primary_dark</item>
    </style>
    <style name="ThemeClockChina" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:homeAsUpIndicator">@drawable/clock_china_home_as_up_indicator</item>
        <item name="android:colorControlActivated">#ff30c7ff</item>
    </style>
    <style name="ClockChinaActionBarTitle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">@color/clock_china_title</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
    </style>
    <style name="RingtonePickerTranslucentCommon">
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowElevation">@dimen/picker_window_elevation_size</item>
    </style>
    <style name="RingtonePickerDefault" parent="@style/RingtonePickerTranslucentCommon" />
</resources>
