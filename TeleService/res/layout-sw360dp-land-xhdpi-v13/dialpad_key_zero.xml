<?xml version="1.0" encoding="utf-8"?>
<com.android.phone.dialpad.DialpadKeyButton android:id="@id/zero" style="@style/DialpadKeyButtonStyle"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="@dimen/dialpad_key_width" android:layout_height="@dimen/dialpad_key_height">
        <View android:background="#ffc6c6c6" android:layout_width="fill_parent" android:layout_height="@dimen/dialpad_divider_height" />
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/dialpad_internal_key_height">
            <LinearLayout style="@style/DialpadKeyInternalLayoutStyle">
                <TextView android:id="@id/dialpad_key_number" style="@style/DialpadBottomKeyNumberStyle" />
                <TextView android:id="@id/dialpad_key_letters" style="@style/DialpadKeyLettersStyleZero" />
            </LinearLayout>
            <View android:layout_gravity="right" android:background="#ffc6c6c6" android:layout_width="@dimen/dialpad_divider_height" android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>
</com.android.phone.dialpad.DialpadKeyButton>