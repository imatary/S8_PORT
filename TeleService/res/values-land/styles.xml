<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialpadKeyNumberStyle">
        <item name="android:textSize">@dimen/dialpad_key_number_text_size</item>
        <item name="android:textColor">@color/dialpad_primary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dialpad_key_number_height</item>
        <item name="android:layout_marginTop">@dimen/dialpad_key_number_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_key_number_margin_bottom</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">samsung-sans-num3L-light</item>
    </style>
    <style name="DialpadKeyLettersStyle">
        <item name="android:textSize">@dimen/dialpad_key_letters_text_size</item>
        <item name="android:textColor">@color/dialpad_secondary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/dialpad_key_letters_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dialpad_key_letters_text_margin_top</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="DialpadKeyLettersStyleZero">
        <item name="android:textSize">@dimen/dialpad_key_letters_size_zero</item>
        <item name="android:textColor">@color/dialpad_secondary_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/dialpad_key_letters_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dialpad_key_letters_zero_margin_top</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
