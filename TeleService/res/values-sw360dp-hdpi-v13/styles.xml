<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialpadKeyButtonStyle">
        <item name="android:background">@drawable/call_dial_btn_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:clipChildren">false</item>
        <item name="android:layout_width">@dimen/dialpad_button_width</item>
        <item name="android:layout_height">@dimen/dialpad_button_height</item>
        <item name="android:minHeight">@dimen/dialpad_key_height</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="DialpadKeyInternalLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DialpadKeyButtonContainerStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">@dimen/dialpad_button_height</item>
    </style>
</resources>
